<?xml version="1.0" ?>

<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 0.5" "http://jpf.sourceforge.net/plugin_0_5.dtd">

<plugin id="core" version="0.10.0">

    <!--
        The TemplateBean extension point is used for connecting new
        template beans to the liquidsite.plugin.<name> namespace. The
        class attribute must point to a subclass of
        org.liqudisite.app.template.TemplateBean.
    -->
    <extension-point id="TemplateBean">
        <parameter-def id="name" />
        <parameter-def id="class" />
    </extension-point>

</plugin>
